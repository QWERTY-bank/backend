@model LoginViewModel

<div class="mobile-login-wrapper">
    <div class="logo">
        <img src="~/logo.svg" alt="QWERTY-Bank" />
        <h1>QWERTY-Bank</h1>
    </div>

    <form method="post" asp-controller="Auth" asp-action="Login" class="mobile-login-form">
        <input type="hidden" asp-for="ReturnUrl" />

        <div class="form-group">
            <label for="Phone">Номер телефона</label>
            <input type="text" asp-for="Phone" class="input-text" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Password">Пароль</label>
            <input type="password" asp-for="Password" class="input-text" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
        <span asp-validation-for="ReturnUrl" class="validation-summary"></span>

        <button type="submit" class="btn-signin">Войти</button>
    </form>
</div>